{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI debug",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "app:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ]
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app"
            ],
            "jinja": true
        }
    ]
}